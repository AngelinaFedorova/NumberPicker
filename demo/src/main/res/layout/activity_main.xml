<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_1_white"
    android:orientation="vertical"
    tools:context="com.super_rabbit.demo.MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/chat_bot_bubble_orange"
        app:layout_constraintBottom_toTopOf="@id/show_style_demo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/show_style_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Styles Demo"
        app:layout_constraintBottom_toTopOf="@id/show_unlimited_number_picker"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/show_unlimited_number_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Unlimited Number Picker"
        app:layout_constraintBottom_toTopOf="@id/show_day_picker"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/show_day_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Day Picker"
        app:layout_constraintBottom_toTopOf="@id/show_week_day_picker"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/show_week_day_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Week Day Picker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
